<?xml version="1.0"?>
<block>
  <name>Variable Length Packet Tagger to PDU</name>
  <key>satellites_varlen_packet_tagger_pdu</key>
  <category>[Satellites]/Packet</category>
  <import>import satellites</import>
  <make>satellites.varlen_packet_tagger_pdu($syncword_tag, $packetlen_tag, $length_field_size, $mtu, $hend, $oend, $use_golay)</make>

  <param>
    <name>Syncword Tag</name>
    <key>syncword_tag</key>
    <value>syncword</value>
    <type>string</type>
  </param>
  <param>
    <name>Packet Length Tag</name>
    <key>packetlen_tag</key>
    <value>packet_len</value>
    <type>string</type>
  </param>
  <param>
    <name>Packet Length Size</name>
    <key>length_field_size</key>
    <value>12</value>
    <type>int</type>
  </param>
  <param>
    <name>MTU</name>
    <key>mtu</key>
    <value>255*8</value>
    <type>int</type>
  </param>
  <param>
    <name>Header Endianness</name>
    <key>hend</key>
    <value>gr.GR_MSB_FIRST</value>
    <type>int</type>
    <option>
      <name>MSB</name>
      <key>gr.GR_MSB_FIRST</key>
    </option>
    <option>
      <name>LSB</name>
      <key>gr.GR_LSB_FIRST</key>
    </option>
  </param>
  <param>
    <name>Output Endianness</name>
    <key>oend</key>
    <value>gr.GR_MSB_FIRST</value>
    <type>int</type>
    <option>
      <name>MSB</name>
      <key>gr.GR_MSB_FIRST</key>
    </option>
    <option>
      <name>LSB</name>
      <key>gr.GR_LSB_FIRST</key>
    </option>
  </param>
  <param>
    <name>Golay Decoding</name>
    <key>use_golay</key>
    <value>True</value>
    <type>bool</type>
    <option>
      <name>Off</name>
      <key>False</key>
    </option>
    <option>
      <name>On</name>
      <key>True</key>
    </option>
  </param>

  <sink>
    <name>in</name>
    <type>byte</type>
  </sink>
  <source>
    <name>out</name>
    <type>message</type>
  </source>

  <doc>Extract the packet length from the bits directly following a sync tag.  Output the packet as a pdu with packed bits.</doc>
</block>
